<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="layout.safetravel.com.safetravel.Adapter.LevelTravelAdapter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_gravity="bottom"
        android:background="@color/icon"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp" />
    <LinearLayout
        style="@style/LayoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/badges_standard"
            android:layout_height="@dimen/badges_standard"
            android:src="@drawable/badges"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextInTitle2"
            android:text="Nekat"/>
    </LinearLayout>


</LinearLayout>
