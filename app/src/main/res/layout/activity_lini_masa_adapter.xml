<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:context="layout.safetravel.com.safetravel.Adapter.LiniMasaAdapter">
    <TextView
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        style="@style/TextInTitle"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_500"
        android:text="29\nSept" />
    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:markerSize="24dp"
        app:line="@color/colorPrimary"
        app:lineSize="2dp" />
    <android.support.v7.widget.CardView
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/LayoutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_standard">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profil_img_profil"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:src="@drawable/al"
                app:civ_border_width="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_standard"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextInSubtitle"
                    android:text="20:30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextInItem"
                    android:text="Rialto Bridge"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:tint="@color/grey_900"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_on_black_24dp"/>
                    <TextView
                        style="@style/TextInSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Sestire San Polo, 30125 \nVenezuela, Italy"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
