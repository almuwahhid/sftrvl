<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout1"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    tools:context="layout.safetravel.com.safetravel.Adapter.PanduanSaranAdapter">
    <ImageView
        style="@style/IconItemVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account_box_black_24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextInTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lengkapi biodata Anda" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextInSubtitle"
            android:text="isi biodata Anda selengkap - lengkapnya"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/IconItemVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
