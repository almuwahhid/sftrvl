<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.safetravel.com.safetravel.Pages.PerjalananSementara">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            android:paddingBottom="@dimen/margin_big"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_nama_lengkap"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Nama Lengkap"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_email"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:hint="Email"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_tgl_lahir"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_black_24dp"
                    android:hint="Tanggal Lahir"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_no_passport"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_book_black_24dp"
                    android:hint="No. Passport"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_masa_berlaku"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_black_24dp"
                    android:hint="Masa Berlaku Pasport"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_tgl_berangkat"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_black_24dp"
                    android:hint="Tanggal Berangkat"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_tgl_pulang"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_black_24dp"
                    android:hint="Tanggal Pulang"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/tv_tgl_lahir" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/tv_masa_berlaku" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/tv_tgl_berangkat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/tv_tgl_pulang" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_standard"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StandardText"
                android:textSize="@dimen/text_title"
                android:text="Tujuan Perjalanan" />
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_height">
                <TextView
                    android:id="@+id/tv_has_no_perjalanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextInSubtitle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Belum ada tujuan perjalanan"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_tujuan_perjalanan"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_perjalanan"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH PERJALANAN"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_standard"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StandardText"
                android:textSize="@dimen/text_title"
                android:text="Anggota Perjalanan" />
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_height">
                <TextView
                    android:id="@+id/tv_has_no_anggota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextInSubtitle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Belum ada anggota perjalanan"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_anggota_perjalanan"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_anggota_perjalanan"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH ANGGOTA"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
