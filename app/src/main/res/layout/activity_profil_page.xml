<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.safetravel.com.safetravel.Pages.ProfilPage">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_standard">
            <RelativeLayout
                android:layout_width="86dp"
                android:layout_height="86dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profil_img_profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/al"
                    app:civ_border_width="0dp" />
                <ImageView
                    android:id="@+id/profil_img_badges"
                    android:layout_width="@dimen/badges_small"
                    android:layout_height="@dimen/badges_small"
                    android:src="@drawable/badges"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/profil_tv_nama"
                        style="@style/StandardText"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AL MUWAHHID"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_stars_black_24dp"
                            android:tint="@color/yellow_600" />
                        <TextView
                            android:id="@+id/profil_tv_poin"
                            style="@style/TextInSubtitle"
                            android:text="1001 poin"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/profil_imgbtn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create_black_24dp"
                    android:tint="@color/white"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingLeft="@dimen/margin_big"
                    android:paddingRight="@dimen/margin_big"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/colorPrimary"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/TextInItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Profil"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/profil_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/profil_relative_biodata"
            style="@style/LayoutItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconItemVector"
                    android:src="@drawable/ic_book_black_24dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:orientation="vertical">
                    <TextView
                        style="@style/TextInItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biodata Saya"/>
                    <TextView
                        style="@style/TextInSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="informasi biodata dan kelengkapan identitas"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical"/>
        <RelativeLayout
            android:id="@+id/profil_relative_infopoin"
            style="@style/LayoutItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconItemVector"
                    android:src="@drawable/ic_local_offer_black_24dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:orientation="vertical">
                    <TextView
                        style="@style/TextInItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Poin"/>
                    <TextView
                        style="@style/TextInSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="informasi cara mendapatkan poin"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical"/>
        <RelativeLayout
            android:id="@+id/profil_relative_linimasa"
            style="@style/LayoutItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconItemVector"
                    android:src="@drawable/ic_more_vert_black_24dp" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:orientation="vertical">
                    <TextView
                        style="@style/TextInItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lini Masa"/>
                    <TextView
                        style="@style/TextInSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jurnal perjalanan Anda selama di luar negeri"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/profil_relative_logout"
            style="@style/LayoutItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconItemVector"
                    android:src="@drawable/ic_power_settings_new_black_24dp"/>
                <TextView
                    android:layout_marginLeft="@dimen/margin_standard"
                    style="@style/TextInTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@color/icon"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>