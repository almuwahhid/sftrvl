<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/margin_standard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorPrimary">
        <TextView
            style="@style/StandardText"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TUJUAN PERJALANAN"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/margin_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_namanegara"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_public_black_24dp"
                    android:hint="Nama Negara"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_perjalanan_namanegara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_kota"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_business_black_24dp"
                    android:hint="Kota/Wilayah"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_perjalanan_kota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_perwakilan"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:hint="Perwakilan"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_perjalanan_perwakilan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_visa"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_book_black_24dp"
                    android:hint="No. Visa/Izin Tinggal"
                    android:layout_centerVertical="true"
                    android:id="@+id/edt_perjalanan_visa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_masa_berlaku"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_black_24dp"
                    android:hint="Tanggal Masa Berlaku"
                    android:layout_centerVertical="true"
                    android:id="@+id/edt_perjalanan_masa_berlaku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/tv_perjalanan_masa_berlaku" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_alamat"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:hint="Alamat di Luar Negeri"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_perjalanan_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_perjalanan_tujuan"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:paddingTop="@dimen/margin_small"
                android:clipToPadding="false"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_event_note_black_24dp"
                    android:hint="Tujuan Perjalanan"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_perjalanan_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_perjalanan_submit"
                style="@style/Button"
                android:text="SIMPAN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>